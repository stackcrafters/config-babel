{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": false,
    "declaration": true,
    "allowJs": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  }
}